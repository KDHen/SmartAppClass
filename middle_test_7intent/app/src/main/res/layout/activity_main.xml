<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/karina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Karina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/winter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/yuJin"
        />

    <Button
        android:id="@+id/winter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Winter"
        app:layout_constraintStart_toEndOf="@+id/karina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/wonYoung"
         />

    <Button
        android:id="@+id/yuJin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yujin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wonYoung"
        app:layout_constraintTop_toBottomOf="@id/karina"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/wonYoung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Wonyoung"
        app:layout_constraintStart_toEndOf="@+id/yuJin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/winter"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>